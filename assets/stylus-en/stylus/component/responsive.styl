/* Large devices (laptops/desktops, 992px and up) */
@media only screen and (min-width: 992px)
    body
        font-size: 12px
    .wrapper section.intro_details
        background-color: #fbfbfb
        position relative
        z-index 100000
        padding-top 120px
        padding-bottom: 300px;
        &::after
            content: " ";
            background-image: url(../img/dot_pttrn.png);
            width: 1000px;
            height: 1000px;
            position: absolute;
            left: -15%;
            border-radius: 50%;
            top: -25%
            z-index -1
        .intro
            h2  
                color:#000
                font-size: 4.167rem!important;
                font-weight: bold
            p
                font-size: 2.5rem;
                line-height: 1.5;
                padding-right: 480px;
    .wrapper section.feature_details 
        ul
            li
                width: 50%!important
            li:nth-child(2n)
                margin-right: -1px
            li:nth-child(2n-1)
                margin-top: -65px
    .img
        width: 50%!important
        margin-top: 0px
    .content
        width: 50%!important  
    .section5
        p
            padding: 5px 150px;
        img 
            width: 50%  
    section.help 
        div
            padding: 70px 100px   
    .main_nav_responsive
        display: none
