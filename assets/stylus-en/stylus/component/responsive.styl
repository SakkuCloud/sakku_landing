/* Extra small devices (phones, 600px and down) */
@media only screen and (max-width: 768px) 
    body
        font-size: 10px!important
    .main_nav_responsive
        display: block
        position relative
        margin-top: 45px
        button 
            font-size: 17px;
            color: colors.black;
            padding: 5px 15px;
            transition: all .2s
            font-family: IRANYekan
            &:hover
                    background-color: colors.black
                    color:colors.white
        div
            display none
            position: fixed
            right 0
            left 0
            top: 0
            bottom: 0
            background-color rgba(0,0,0,.8)
            text-align: center
            ul
                margin-top: 30px
                li
                    padding: 20px
                    text-align: center
                    a
                        color: colors.white
                        font-size: 1.5rem
                        display: inline-block
                        width: 100%
