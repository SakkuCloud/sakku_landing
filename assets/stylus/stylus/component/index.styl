.registration
    background-image: url(../img/dot_pttrn.png);
    background-color: #403cb7
    padding-top: 60px
    padding-bottom: 60px
    text-align: center
    position relative
    h3
        font-size: 3rem
        font-weight: bold
        color: #fff
    p
        font-size: 1.677rem
        color #ffffff
        margin-bottom: 50px
    div
        input 
            border-radius: 4px;
            border: solid 1px rgba(255, 255, 255, 0.39);
            background-color: rgba(49, 27, 146, 0.29);
            padding: 10px 10px;
            width: 416px;
            font-family: IRANYekan
            font-size: 1.34rem
            color: #fff
            &::placeholder ,
            &::-ms-input-placeholder,  
            &::-ms-input-placeholder
