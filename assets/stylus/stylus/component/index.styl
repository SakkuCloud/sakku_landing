.box_padding
    padding: 0 100px; 
    
.wrapper
    overflow hidden
    background-color: #ffffff
    section.intro_details
        background-color: #fbfbfb
        position relative
        z-index 100000
        padding-top 120px
        padding-bottom: 300px;
        &::after
            content: " ";
            background-image: url(../img/dot_pttrn.png);
            width: 1000px;
            height: 1000px;
            position: absolute;
            right: -15%;
            border-radius: 50%;
            top: -25%
            z-index -1
        .intro
            h2  
                color:#000
                font-size: 50px;
                font-weight: bold
            p
                font-size: 30px;
                line-height: 1.5
        .feature
            background-image: url('../img/cloud.png')
            height 600px;
            background-repeat: no-repeat
            background-size: contain
            header 
                margin-top: 90px;
                float right
                position relative
                z-index 1000
                margin-right: 43px;

                &::before
                    content: " "
                    width: 83px
                    height 83px
                    background-color: #ffca28
                    border-radius: 50%
                    position: absolute
                    z-index -1
                    opacity 0.76
                &::after
                    content: " "
                    width: 15px
                    height 15px
                    background-color: #ef9a9a
                    border-radius: 50%
                    position: absolute
                    z-index -1
                    top -10px
                    right: -10px
                h3
                    font-size 20px
                    margin: 22px 28px
                    font-weight: bold;
    section.feature_details
        position relative
        z-index 10000000
        margin-bottom: 80px;
        &::before
            content: " ";
            background-image: url(../img/dot_pttrn.png);
            /* width: 1000px; */
            height: 142px;
            position: absolute;
            right: 100px;
            left: 100px;
            bottom: -70px;
            z-index: -1;
        &::after
            content: " ";
            background-color: #fff;
            position: absolute;
            right: 100px;
            bottom: -60px;
            width: 520px;
            height: 50px;
        header 
            background-image: url(../img/dot_pttrn.png);
            z-index 1000
            position relative
            border-top: 3px solid #bbdefb
            -webkit-clip-path: polygon(90% 0, 100% 40%, 100% 100%, 0 100%, 0 0);
            clip-path: polygon(90% 0, 100% 40%, 100% 100%, 0 100%, 0 0);
            margin-top: -114px;
            padding-right: 107px;
            padding-top: 31px;
            padding-bottom: 130px
            &::before
                    content: " "
                    width: 152px
                    height 152px
                    background-color: #ffca28
                    border-radius: 50%
                    position: absolute
                    z-index -1
                    opacity 0.76
            h3
                color:#01579b
                font-size: 42px;
                font-weight: bold
                z-index 1
                margin-top: 16px;
                margin-right: 56px;
            p
                font-size: 24px;
                color #424242
                margin-right: 150px
               
            img 
                float left
                margin-top: 28px;
                margin-left: 92px;
                margin-bottom: 35px
        ul
            li
                width: 50%
                float right
                border:1px solid #b3e5fc
                padding 22px
                min-height: 360px
                border-top: none
                background-color: #fff
                position relative
                z-index 100000
                h3
                    font-size: 24px
                    color: #1e88e5
                    font-weight: bold
                p
                    font-size: 20px;
                    font-weight: normal;
                    line-height: 2.15;
                    color: #393939;
                    margin-top: 36px
                &:nth-child(2n)
                    margin-right: -1px
                &:nth-child(1),
                &:nth-child(2)
                    border-top: 1px solid #b3e5fc
                &:nth-child(2n-1)
                    margin-top: -65px
