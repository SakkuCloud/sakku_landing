            &:hover,
            &:focus
                border-color: #fff
        button 
            border:none
            z-index 10000
            outline: none 
            font-weight: bold
            border-radius: 4px
            color: #403cb7
            background-color: #ffffff
            font-size: 1.5rem
            font-family: IRANYekan
            padding: 9px 47px;
            margin-right: 10px;
            cursor pointer
            transition: all .2s
            &:hover
                background-color #ffc32c

