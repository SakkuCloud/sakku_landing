
header.main_header
    padding: 0 100px;   
    position: absolute;
    right 0
    left 0;
    z-index 200000000000
    background-color: transparent
    .logo
        margin-top: 35px     
    .main_nav
        margin-top: 35px
        li
            float right
            margin-right: 10px
            margin-left: 10px
            a
                font-size: 17px;
                color: colors.black;
                padding: 5px 15px;
                transition: all .2s
                &:hover
                    background-color: colors.black
                    color:colors.white

            &.register
                a
                    color:colors.white
                    padding: 5px 15px
                    background-color: colors.black
                    margin-left: 15px
.box_padding
    padding: 0 100px; 
    
.wrapper
    overflow hidden
    background-color: #ffffff
    section.intro_details
        background-color: #fbfbfb
        position relative
        z-index 100000
        padding-top 120px
        padding-bottom: 300px;
        &::after
            content: " ";
            background-image: url(../img/dot_pttrn.png);
            width: 1000px;
            height: 1000px;
            position: absolute;
            right: -15%;
            border-radius: 50%;
            top: -25%
            z-index -1
        .intro
            h2  
                color:#000
                font-size: 4.167rem;
                font-weight: bold
            p
                font-size: 2.5rem;
                line-height: 1.5
                padding-left: 480px;
        .feature
            background-image: url('../img/cloud.png')
            height 600px;
            background-repeat: no-repeat
            background-size: contain
            header 
                margin-top: 90px;
                float right
                position relative
                z-index 1000
                margin-right: 43px;
                &:hover::before
                    background-color rgba(0, 86, 255, .9)
                &::before
                    content: " "
                    width: 83px
                    height 83px
                    background-color: #ffca28
                    border-radius: 50%
                    position: absolute
                    z-index -1
                    opacity 0.76
                    transition: all .2s
                &::after
                    content: " "
                    width: 15px
                    height 15px
                    background-color: #ef9a9a
                    border-radius: 50%
                    position: absolute
                    z-index -1
                    top -10px
                    right: -10px
                a
                    font-size 1.667rem
                    margin: 35px 28px
                    font-weight: bold;
                    display: block
                    color :colors.black
                    cursor pointer
    section.feature_details
        position relative
        z-index 10000000
        margin-bottom: 80px;
        &::before
            content: " ";
            background-image: url(../img/dot_pttrn.png);
            /* width: 1000px; */
            height: 142px;
            position: absolute;
            right: 100px;
            left: 100px;
            bottom: -70px;
            z-index: -1;
        &::after
            content: " ";
            background-color: #fff;
            position: absolute;
            right: 100px;
            bottom: -60px;
            width: 520px;
            height: 50px;
        header 
            background-image: url(../img/dot_pttrn.png);
            z-index 1000
            position relative
            border-top: 3px solid #bbdefb
            -webkit-clip-path: polygon(90% 0, 100% 40%, 100% 100%, 0 100%, 0 0);
            clip-path: polygon(90% 0, 100% 40%, 100% 100%, 0 100%, 0 0);
            margin-top: -114px;
            padding-right: 107px;
            padding-top: 31px;
            padding-bottom: 130px
            &::before
                    content: " "
                    width: 152px
                    height 152px
                    background-color: #ffca28
                    border-radius: 50%
                    position: absolute
                    z-index -1
                    opacity 0.76
            h3
                color:colors.black
                font-size: 3.5rem;
                font-weight: bold
                z-index 1
                margin-top: 16px;
                margin-right: 56px;
            p
                font-size: 2rem;
                color #424242
                margin-right: 150px
                padding-left: 10px
            img 
                float left
                margin-top: 28px;
                margin-left: 86px;
                margin-bottom: 35px
        ul
            li
                width: 50%
                float right
                border:1px solid #b3e5fc
                padding 22px
                min-height: 360px
                border-top: none
                background-color: #fff
                position relative
                z-index 100000
                h3
                    font-size: 2rem
                    color: #1e88e5
                    font-weight: bold
                p
                    font-size: 1.667rem;
                    font-weight: normal;
                    line-height: 2.15;
                    color: #393939;
                    margin-top: 36px
                &:nth-child(2n)
                    margin-right: -1px
                &:nth-child(1),
                &:nth-child(2)
                    border-top: 1px solid #b3e5fc
                &:nth-child(2n-1)
                    margin-top: -65px
